{
    "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
    "id": "c7a8eb54-6caa-4b0e-9576-4409f9c270ef",
    "manifestVersion": "1.17",
    "version": "1.0.0",
    "name": {
        "short": "OutlookReplyAllWarning",
        "full": "Outlook Reply All Warning Add-in"
    },
    "description": {
        "short": "Warns users when they hit reply all with more than 2 recipients.",
        "full": "This add-in warns users when they hit reply all with more than 2 recipients to prevent accidental over-sharing of information."
    },
    "developer": {
        "name": "Your Company",
        "websiteUrl": "https://www.yourcompany.com",
        "privacyUrl": "https://www.yourcompany.com/privacy",
        "termsOfUseUrl": "https://www.yourcompany.com/servicesagreement"
    },
    "icons": {
        "outline": "https://sonutechsavy.github.io/OutlookReplyAllAddin/assets/outline.png",
        "color": "https://sonutechsavy.github.io/OutlookReplyAllAddin/assets/color.png"
    },
    "accentColor": "#230201",
    "localizationInfo": {
        "defaultLanguageTag": "en-us",
        "additionalLanguages": []
    },
    "authorization": {
        "permissions": {
            "resourceSpecific": [
                {
                    "name": "MailboxItem.Read.User",
                    "type": "Delegated"
                }
            ]
        }
    },
    "validDomains": [
        "sonutechsavy.github.io",
        "yourcompany.com"
    ],
    "extensions": [
        {
            "requirements": {
                "scopes": [
                    "mail"
                ],
                "capabilities": [
                    {
                        "name": "Mailbox",
                        "minVersion": "1.3"
                    }
                ]
            },
            "runtimes": [
                {
                    "requirements": {
                        "capabilities": [
                            {
                                "name": "Mailbox",
                                "minVersion": "1.3"
                            }
                        ]
                    },
                    "id": "TaskPaneRuntime",
                    "type": "general",
                    "code": {
                        "page": "https://sonutechsavy.github.io/OutlookReplyAllAddin/taskpane.html"
                    },
                    "lifetime": "short",
                    "actions": [
                        {
                            "id": "TaskPaneRuntimeShow",
                            "type": "openPage",
                            "pinnable": false,
                            "view": "dashboard"
                        }
                    ]
                }
            ],
            "ribbons": [
                {
                    "contexts": [
                        "mailRead",
                        "mailCompose"
                    ],
                    "tabs": [
                        {
                            "builtInTabId": "TabDefault",
                            "groups": [
                                {
                                    "id": "msgReadGroup",
                                    "label": "Reply All Warning",
                                    "icons": [
                                        {
                                            "size": 16,
                                            "url": "https://sonutechsavy.github.io/OutlookReplyAllAddin/assets/icon-16.png"
                                        },
                                        {
                                            "size": 32,
                                            "url": "https://sonutechsavy.github.io/OutlookReplyAllAddin/assets/icon-32.png"
                                        },
                                        {
                                            "size": 80,
                                            "url": "https://sonutechsavy.github.io/OutlookReplyAllAddin/assets/icon-80.png"
                                        }
                                    ],
                                    "controls": [
                                        {
                                            "id": "msgReadOpenPaneButton",
                                            "type": "button",
                                            "label": "Show Taskpane",
                                            "icons": [
                                                {
                                                    "size": 16,
                                                    "url": "https://sonutechsavy.github.io/OutlookReplyAllAddin/assets/icon-16.png"
                                                },
                                                {
                                                    "size": 32,
                                                    "url": "https://sonutechsavy.github.io/OutlookReplyAllAddin/assets/icon-32.png"
                                                },
                                                {
                                                    "size": 80,
                                                    "url": "https://sonutechsavy.github.io/OutlookReplyAllAddin/assets/icon-80.png"
                                                }
                                            ],
                                            "supertip": {
                                                "title": "Show Taskpane",
                                                "description": "Opens a pane displaying the add-in."
                                            },
                                            "actionId": "TaskPaneRuntimeShow"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
